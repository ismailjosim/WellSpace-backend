{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "node",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,

		"baseUrl": "./src/app",
		"paths": {
			"@/*": ["*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
